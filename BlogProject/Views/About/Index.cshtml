@model IEnumerable<EntityLayer.Concrete.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="site-cover site-cover-sm same-height overlay single-page" style="background-image: url('/miniblog/images/img_4.jpg');">
    <div class="container">
        <div class="row same-height justify-content-center">
            <div class="col-md-12 col-lg-10">
                <div class="post-entry text-center">
                    <h1 class="">Hakkımızda</h1>
                    <p class="lead mb-4 text-white">Merhaba ve hoş geldiniz! Biz, miniblog, sizlere teknoloji, yazılım, seyahat ve daha birçok konuda bilgi sunan bir platformuz. Amacımız, zengin ve çeşitli içeriklerle dolu bir blog oluşturarak okuyucularımıza ilham vermek, bilgi sağlamak ve eğlendirmektir.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 order-md-2">
                    <img src="@item.AboutImage1" alt="Image" class="img-fluid">
                </div>
                <div class="col-md-5 mr-auto order-md-1">
                    <h2>Misyonumuz</h2>

                    <p>@item.AboutContent1</p>


                    <ul class="ul-check list-unstyled success">
                        <li>Yazılım geliştirme ipuçları</li>
                        <li>Teknoloji dünyasındaki en son haberleri</li>
                        <li>Geniş bir konu yelpazesi</li>
                        <li>Seyahat deneyimlerini ve daha birçok konuyu içeren çeşitli makaleler</li>
                    </ul>
                </div>
            }

        </div>
    </div>
</div>
@Html.Action("MeetTheTeam", "About")
<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6">
                    <img src="@item.AboutImage2" alt="Image" class="img-fluid">
                </div>
                <div class="col-md-5 ml-auto">
                    <h2>Biz Kimiz?</h2>
                    <p class="mb-4">@item.AboutContent2</p>
                </div>
            }
            
        </div>
    </div>
</div>
@Html.Action("Footer", "About")



