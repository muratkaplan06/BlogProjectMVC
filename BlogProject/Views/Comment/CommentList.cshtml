@model IEnumerable<EntityLayer.Concrete.Comment>

<div class="pt-5">
    <h3 class="mb-5">Yorumlar</h3>
    <ul class="comment-list">
        @foreach (var item in Model)
        {
            <li class="comment">
                <div class="vcard">
                    <img src="@(!string.IsNullOrEmpty(item.UserImage) ? item.UserImage : "/miniblog/images/person_1.jpg")" alt="Image placeholder">
                </div>
                <div class="comment-body">
                    <h3>@item.UserName</h3>
                    <div class="meta">@(((DateTime)item.CommentTime).ToString("MM/dd/yyyy"))</div>
                    <p>@item.CommentText</p>
                    <p><a href="#" class="reply rounded">Reply</a></p>
                </div>
            </li>}

    </ul>
    <!-- END comment-list -->
    <a href="/comment/LeaveComment/@ViewBag.id">Yorum Bırakın</a>
   
</div>
